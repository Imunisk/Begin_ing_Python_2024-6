//C언어- 두개배열 병합하는코드

#include <stdio.h>

int main(){
   
   int arr1[3] = {1,2,3};
   int arr2[3] = {4,5,6};
   
   int mergedArr[6];
   
   
   int x=0;
   
   for (int i=0;i<3;i++) {
      mergedArr[x]= arr1[i];
      x++;
   }
   for (int j=0;j<3;j++) {
      mergedArr[x]= arr2[j];
      x++;
   }
   
   //합친 결과 출력
   printf("Merged Array: ");
   for (int k=0;k<6;k++) {
      printf("%d",mergedArr[k]);
   }

   return 0;
}


// 파이썬에서- 두개배열 병합하는코드
// 단 두줄로 완성된다.
arr1 = (1,2,3)
arr2 = (4,5,6)
print(arr1 + arr2)
